# Environment
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# Main Database (Business Data)
DATABASE_URL="postgresql://postgres:password@localhost:5432/ordendirecta?schema=public"

# Audit Database (Logs, Tracing, Security)
AUDIT_DATABASE_URL="postgresql://postgres:password@localhost:5432/ordendirecta_audit?schema=audit"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Typesense (Fast Search)
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_API_KEY=your-typesense-api-key

# Allowed Origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3002,http://localhost:3003,http://localhost:3004

# 2FA
TWO_FACTOR_APP_NAME=OrdenDirecta

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_ADMIN=1000
RATE_LIMIT_MAX_SELLER=500
RATE_LIMIT_MAX_USER=100

# Logging
LOG_LEVEL=info

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Email Service (Nodemailer)
EMAIL_FROM=noreply@ordendirecta.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage (S3/R2)
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET=ordendirecta-assets

# Cloudflare R2 (Alternative to S3)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=ordendirecta-assets

# CDN
CDN_URL=https://cdn.ordendirecta.com

# Session
SESSION_SECRET=your-session-secret-change-this

# Commission Settings
DEFAULT_COMMISSION_RATE=0.15
MIN_COMMISSION_RATE=0.05
MAX_COMMISSION_RATE=0.30

# Fraud Detection
FRAUD_SCORE_THRESHOLD=0.7
ENABLE_FRAUD_DETECTION=true

# Search Settings
SEARCH_MIN_LENGTH=2
SEARCH_MAX_RESULTS=100

# Cache TTL (seconds)
CACHE_TTL_SHORT=60
CACHE_TTL_MEDIUM=300
CACHE_TTL_LONG=3600
CACHE_TTL_VERY_LONG=86400

# Queue Settings
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=

# PgBouncer (Production)
PGBOUNCER_URL=postgresql://postgres:password@pgbouncer:6432/ordendirecta

# Monitoring
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# API Keys
INTERNAL_API_KEY=your-internal-api-key-for-service-communication